{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["packages/shared/src/*"],
      "@store/*": ["apps/client/src/store/*"],
      "@dashboard-types/*": ["apps/client/src/types/*"],
      "@project/shared-types": ["packages/shared-types/src/index.ts"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "references": [
    { "path": "apps/client" },
    { "path": "apps/api" },
    { "path": "packages/shared-types" }
  ],
  "exclude": ["node_modules", "dist"]
}
