{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@features/*": ["src/features/*"],
      "@dashboard/*": ["src/features/dashboard/components/Dashboard/*"],
      "@dashboard-balance/*": [
        "src/features/dashboard/components/DashboardBalance/*"
      ],
      "@dashboard-market-balace/*": [
        "src/features/dashboard/components/DashboardMarketOverview/*"
      ],
      "@dashboard-portfolio-performance/*": [
        "src/features/dashboard/components/DashboardPortfolioPerformance/*"
      ],
      "@dashboard-portfolio-overview/*": [
        "src/features/dashboard/components/DashboardPortfolioOverview/*"
      ],
      "@dashboard-watchlist/*": [
        "src/features/dashboard/components/DashboardWatchList/*"
      ],
      "@dashboard-types/*": ["src/features/dashboard/types/*"],
      "@components-types/*": ["src/components/types/*"],
      "@components/*": ["src/components/*"],
      "@utilities": ["src/utilities/utilities"],
      "@store-dashboard/*": ["src/store/dashboard/*"]
    }
  },
  "include": ["src"]
}
